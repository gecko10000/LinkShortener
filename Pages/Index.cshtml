@page
<link rel="stylesheet" href="~/css/index.css">
<body>
<h2>Gecko's Link Shortener</h2>
<div>
  <form id="linkForm">
    <label for="link">Link:</label>
    <input type="text" required id="link" name="link" autocomplete="off">
    <input type="submit" class="submit" value="Shorten">
  </form>
  <input type="text" id="forCopy" class="undercover"></input>
  <button class="link-button" id="button" onclick="copyToClipboard()"><span id="shortened" style="text-decoration: underline;"></span><br><span style="font-size: 12px; color: #dddddd;">Click to copy</span></button>
</div>
<script src="~/libs/jquery.js"></script>
<script src="~/js/index.js"></script>
</body>